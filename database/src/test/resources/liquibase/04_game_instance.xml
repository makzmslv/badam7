<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet author="mk" id="1">
        <!--                                 -->
        <!-- GAME_INSTANCE -->
        <!--                                 -->
        <createTable tableName="GAME_INSTANCE" remarks="GAME_INSTANCE">
            <column name="ID" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="GAME_INSTANCE_PK" nullable="false"/>
            </column>
            <column name="STATUS" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="REF_GAME" type="INTEGER">
                <constraints nullable="false" />
            </column>
            <column name="REF_PLAYER" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="PLAYER_NO" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="FK_GAME_INSTANCE_REF_PLAYER" baseTableName="GAME_INSTANCE" baseColumnNames="REF_PLAYER" referencedTableName="PLAYER" referencedColumnNames="ID"/>
        <addForeignKeyConstraint constraintName="FK_GAME_INSTANCE_REF_GAME" baseTableName="GAME_INSTANCE" baseColumnNames="REF_GAME" referencedTableName="GAME" referencedColumnNames="ID"/>

    </changeSet>
</databaseChangeLog>